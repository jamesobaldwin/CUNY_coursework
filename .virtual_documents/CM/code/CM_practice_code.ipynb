def forces(r):
    return ( (G*M) / r**2 ) - ( (G*m) / (R - r)**2 ) - (omega**2*r)

def find_L1(x1, x2, eps: float=1e-4):
    delta = 1e4
    iters = 1
    while np.abs(delta) > eps and iters < 1000:
        delta = forces(x2) * ((x2 - x1) / (forces(x2) - forces(x1)))
        x1, x2 = x2, x2 - delta
        iters += 1
        if iters > 1000:
            print('Reached max iters')
    return x2

